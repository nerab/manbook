<?xml version="1.0" encoding="utf-8"?>
<ncx xmlns="http://www.daisy.org/z3986/2005/ncx/" version="2005-1">
  <head>
    <meta name="dtb:title" content="<%= @book_title %>"/>
    <meta name="dtb:depth" content="1"/>
  	<meta name="dtb:totalPageCount" content="0"/>
  	<meta name="dtb:maxPageNumber" content="0"/>
    <meta name="dtb:generator" content="<%= GENERATOR %>"/>
  </head>

  <docTitle><text><%= @book_title %></text></docTitle>

  <navMap>
    <% @pages.each_with_index{|page, i| %>
      <navPoint id="<%= page[:file_name] %>" playOrder="<%= i + 1 %>">
        <navLabel><text><%= page[:title] %></text></navLabel>
        <content src="<%= page[:file_name] %>" />
      </navPoint>
    <% } %>
  </navMap>
</ncx>
